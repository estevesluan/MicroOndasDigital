<form class="form-horizontal"  style="padding: 2em;">

    <div class="form-group">
        <label class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-create-nome" placeholder="Nome">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Instruções</label>
        <div class="col-sm-10">
            <textarea type="text" class="form-control" rows="3" id="textarea-create-instrucoes" placeholder="Instruções"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Potência</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-create-potencia" placeholder="Potência">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Tempo</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-create-tempo" placeholder="Tempo em segundos">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Aquecimento</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-create-aquecimento" placeholder="Caractere de aquecimento">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Alimentos compatíveis</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-create-alimentos" placeholder="Separar alimentos com virgula">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-primary" id="button-programa-gravar">Gravar</button>
        </div>
    </div>
</form>
